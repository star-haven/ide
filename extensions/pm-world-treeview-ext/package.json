{
  "name": "pm-world-treeview-ext",
  "displayName": "Paper Mario world treeview",
  "description": "Provides a sidebar view for maps in Paper Mario decompilation folders",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:src/world"
  ],
  "main": "./lib/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pm-world.addArea",
        "title": "New area...",
        "icon": "$(add)"
      },
      {
        "command": "pm-world.addMap",
        "title": "New map...",
        "icon": "$(add)"
      },
      {
        "command": "pm-world.delete",
        "title": "Delete",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pm-world",
          "title": "World",
          "icon": "resources/world.svg"
        }
      ]
    },
    "views": {
      "pm-world": [
        {
          "id": "pm-world-areas",
          "name": "Areas"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "pm-world.addArea",
          "when": "view == pm-world",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pm-world.addMap",
          "when": "view == pm-world && viewItem == area",
          "group": "inline"
        },
        {
          "command": "pm-world.delete",
          "when": "view == pm-world"
        }
      ]
    }
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build && yarn symlink",
    "symlink": "symlink-dir . ../../plugins/pm-world-treeview-ext",
    "clean": "rimraf lib",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "typescript": "^5.3.3",
    "symlink-dir": "latest",
    "rimraf": "latest"
  }
}
